{
  "name": "lumen-ai-workspace",
  "private": true,
  "version": "0.2.0",
  "description": "Lumen AI - AI-powered paper reading assistant (workspace root)",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:web": "cd frontend && npm run dev",
    "build": "node scripts/build.js",
    "build:backend": "bash scripts/build-backend.sh",
    "build:frontend": "bash scripts/build-frontend.sh",
    "package:mac": "cd electron && npx electron-builder --mac --config electron-builder.json",
    "package:win": "cd electron && npx electron-builder --win --config electron-builder.json",
    "package:linux": "cd electron && npx electron-builder --linux --config electron-builder.json"
  }
}
